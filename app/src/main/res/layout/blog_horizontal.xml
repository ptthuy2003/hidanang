<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBlog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout android:id="@+id/linearRowmnncsn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" >
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnmnncsn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/textTitleBlog"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/msg_m_n_n_c_s_n"
                style="@style/txtLexendregular13" />
            <TextView android:id="@+id/textSummaryBlog"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:maxLines="4"
                android:ellipsize="end"
                android:text="@string/msg_ngo_i_c_nh_p"
                style="@style/txtInterregular11_2" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:layout_margin="4dp"
            app:cardCornerRadius="10dp">
            <ImageView android:id="@+id/imageBlog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>

